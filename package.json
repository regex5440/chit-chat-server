{
  "name": "chat-chat-server",
  "version": "1.0.0",
  "description": "Mock server for chit-chat app",
  "main": "build/server.js",
  "type": "commonjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "static": "node build/server.js",
    "start": "concurrently \"npx tsc -w\" \"nodemon -q build/server.js\"",
    "prepare": "husky install",
    "lint": "prettier --check ."
  },
  "husky": [{
    "hooks": {
      "pre-commit":  "lint-staged"
    }
  }],
  "lint-staged": {
    "*": "prettier --write"
  },
  "author": "Harsh Dagar",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.451.0",
    "@aws-sdk/s3-request-presigner": "^3.451.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "google-auth-library": "^9.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.4.0",
    "mongoose": "^7.4.1",
    "nodemailer": "^6.9.4",
    "redis": "^4.6.10",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.9",
    "@types/nodemailer": "^6.4.13",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^3.1.0",
    "typescript": "^5.1.6"
  }
}
